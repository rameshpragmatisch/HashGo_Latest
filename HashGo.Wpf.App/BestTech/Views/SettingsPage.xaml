                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                                <TextBlock x:Name="Watermark"
                                               Text="Set Background Image"
                                               Foreground="LightGray"
                                               VerticalAlignment="Center"
                                               Margin="5,0,0,0"
                                               IsHitTestVisible="False"/>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                                <Trigger Property="Text" Value="{x:Null}">
                                                    <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                                <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                                    <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                                <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                                    <Setter TargetName="Watermark" Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>-->
                    </TextBox>
                    <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
                        <TextBlock Text="Currency Symbol" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                        <TextBox Text="{Binding CurrencySymbol}" Margin="10" Width="120"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
                        <TextBlock Text="Menu Background Transparency" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                        <Slider x:Name="PART_Slider" Value="{Binding MenuBackgroundTransparency,Mode=TwoWay}" Width="200" Minimum="0" Maximum="1" VerticalAlignment="Center" Margin="20 0 0 0" Cursor="Hand" ></Slider>
                        <TextBlock Margin="10 0 0 0" Text="{Binding Value, ElementName=PART_Slider,StringFormat=\{0:0.00\}}" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                    </StackPanel>

                    <CheckBox Content="Show Language Selection" Margin="10" FontWeight="Bold" IsChecked="{Binding ShowLanguageSelection}"></CheckBox>
                    <CheckBox Content="Show Membership button" Margin="10" FontWeight="Bold" IsChecked="{Binding ShowMemberButton}"></CheckBox>

                     <StackPanel Orientation="Vertical">
                        <ComboBox Margin="10"  HorizontalAlignment="Stretch" IsEditable="True"
                                  Text="Select Printer"
                          ItemsSource="{Binding PrinterNameList}" SelectedItem="{Binding PrinterName}"></ComboBox>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <TabItem Header="Nets" Width="120" Height="40">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.6*"/>
                        <RowDefinition Height="0.2*"/>
                    </Grid.RowDefinitions>

                    <Grid DataContext="{Binding ConnectItem}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left"
      VerticalAlignment="Center" Foreground="White" Margin="25,0,0,0"
              Panel.ZIndex="1000"
      FontWeight="Bold" Text="NETS Port"/>
                        <Border BorderBrush="#8C97C4" BorderThickness="1"
           Background="#8C97C4" Grid.Row="0" Margin="0,5,0,0"
CornerRadius="9" Grid.Column="0" Grid.ColumnSpan="2">
                        </Border>
                        <Border Grid.Column="1" Grid.Row="0"  CornerRadius="12"
                    HorizontalAlignment="Stretch"  Margin="2,15,10,10"
                    VerticalAlignment="Stretch" >
                            <TextBox  Foreground="Black" Background="White"
                 VerticalContentAlignment="Center" Text="{Binding NETSPort,UpdateSourceTrigger=PropertyChanged}"
                 BorderThickness="0" >
                                <i:Interaction.Behaviors>
                                    <behaviours:IntegerInputBehaviour />
                                </i:Interaction.Behaviors>
                            </TextBox>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Border Background="#00B5CB" Focusable="True" Margin="5"
Cursor="Hand"  Height="60"
Grid.Column="0" 
HorizontalAlignment="Stretch" VerticalAlignment="Center" 
CornerRadius="8">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                    <i:InvokeCommandAction Command="{Binding CancelCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <TextBlock Text="Cancel" HorizontalAlignment="Center"
       VerticalAlignment="Center" Foreground="White" />
                        </Border>

                        <Border Background="#00B5CB" Focusable="True"
Cursor="Hand"  Margin="5"
Grid.Column="1" 
HorizontalAlignment="Stretch" VerticalAlignment="Center" 
 Height="60"
CornerRadius="8">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                    <i:InvokeCommandAction Command="{Binding AddOrUpdateTenantCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <TextBlock Text="Save" HorizontalAlignment="Center"
       VerticalAlignment="Center" Foreground="White" />
                        </Border>
                    </Grid>


                </Grid>
                
            </TabItem>
        </TabControl>


       
    </Grid>
    
    
</baseControls:BasePage>
